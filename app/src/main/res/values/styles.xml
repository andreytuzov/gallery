<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="MaterialSearchViewStyle">
        <!--&lt;!&ndash; Background for the search bar &ndash;&gt;-->
        <!--<item name="searchBackground">@color/theme_primary</item>-->

        <!--&lt;!&ndash; Change voice icon &ndash;&gt;-->
        <item name="searchVoiceIcon">@drawable/searchview_ic_action_voice_search</item>

        <!--&lt;!&ndash; Change clear text icon &ndash;&gt;-->
        <item name="searchCloseIcon">@drawable/searchview_ic_action_navigation_close</item>

        <!--&lt;!&ndash; Change up icon &ndash;&gt;-->
        <item name="searchBackIcon">@drawable/searchview_ic_action_navigation_arrow_back</item>

        <!-- Change icon for the suggestions -->
        <item name="searchSuggestionIcon">@drawable/searchview_ic_suggestion</item>

        <!-- Hint for edit text -->
        <item name="android:hint">@string/searchview_search</item>
    </style>

    <style name="TooltipLayoutStyle" parent="ToolTipLayoutDefaultStyle">
        <item name="ttlm_backgroundColor">#EE0288D1</item>
        <item name="ttlm_overlayStyle">@style/TooltipOverlayStyle</item>
        <item name="android:textAppearance">@style/TextAppearanceStyle</item>
    </style>

    <style name="TooltipOverlayStyle" parent="ToolTipOverlayDefaultStyle">
        <item name="android:color">#FF4081</item>
        <item name="android:layout_margin">20dp</item>
        <item name="ttlm_duration">0</item>
        <item name="ttlm_repeatCount">0</item>
    </style>

    <style name="TextAppearanceStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#212121</item>
    </style>

</resources>
